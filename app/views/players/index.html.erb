<h1>Listing players</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Street</th>
      <th>Zip code</th>
      <th>City</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Birthday</th>
      <th>Pants size</th>
      <th>Shirt size</th>
	  <th>Gets Refund</th>
	  <th>Distance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% unless @players == nil%>
  <% @players.each do |player| %>
    <tr>
      <td><%= player.lastname %></td>
      <td><%= player.firstname %></td>
      <td><%= player.street %></td>
      <td><%= player.zip_code %></td>
      <td><%= player.city %></td>
      <td><%= player.phone %></td>
      <td><%= player.mobile %></td>
      <td><%= format_date(player.birthday) %></td>
      <td><%= player.size_pants %></td>
      <td><%= player.size_shirt %></td>
	  <td><%= player.gets_refund %></td>
	  <td><%= player.distance %><td>
      <td><%= link_to 'Show', team_player_path(@team, player) %></td>
      <td><%= link_to 'Edit', edit_team_player_path(@team, player) %></td>
      <td><%= link_to 'Destroy', team_player_path(@team, player), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_team_player_path(:team_id => @team) %>

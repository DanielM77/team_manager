<div class="account_item">
<% pf.fields_for :account_items, account_item do |f| %>
  <p>
    <div class="field">
      <%= f.label :item_date %><br />
      <%= f.date_select :item_date %>
    </div>
    <div class="field">
      <%= f.label :item_type %><br />
      <%= f.text_field :item_type %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :value %><br />
      <%= f.text_field :value %>
    </div>
    <%= link_to_function "remove", "$(this).up('.account_item').remove()" %>
  </p>
<% end %>
</div>


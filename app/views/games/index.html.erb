<h1>Listing games</h1>

<table>
  <tr>
    <th>Game date</th>
    <th>Home</th>
    <th>Away</th>
    <th>Goals home</th>
    <th>Goals away</th>
	<th>Is Accounted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.game_date %></td>
    <td><%= game.home.name %></td>
    <td><%= game.away.name %></td>
    <td><%= game.goals_home %></td>
    <td><%= game.goals_away %></td>
	<td><%= game.is_accounted %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
